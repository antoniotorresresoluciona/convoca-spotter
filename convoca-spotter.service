[Unit]
Description=Convoca-Spotter Production Server
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/home/dionisio/convoca-spotter/backend
ExecStart=/usr/bin/node /home/dionisio/convoca-spotter/backend/server.js
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=convoca-spotter

[Install]
WantedBy=multi-user.target
